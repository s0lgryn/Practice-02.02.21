// exercise 15

#include <iostream> 
#include <stdlib.h> // для работы srand() и rand()
#include <time.h> // для работы time()
using namespace std;

int& f()
{
	srand(time(0));
	static int x = rand() % 100;	// получаем рандомное число от 0 -99
	static int	y = rand() % 100;	// получаем рандомное число от 0 -99
	static int	z = rand() % 100;	// получаем рандомное число от 0 -99

	/* узнаем какая переменная одновременно меньше двух других */

	if ((x <= y) and (x <= z))
		return x;
	else if ((y <= x) and (y <= z))
		return y;
	else if ((z <= x) and (z <= y))
		return z;
}
int main()
{
	cout << f() << endl;    // выводим наименьшую переменную
	f() = 0;								// присваиваем наименьшей переменной значение 0 (из за того что значения случайные мы не можем точно сказать какая)
	cout << f() << endl;		// прогонянм функцию еще раз и так как 0 <= 0-99, то наименьшим будет 0
}

//таким образом мы вернули результат функции по ссылке, и смогли присвоить значение наименьшей статической переменной внутри функции  f()
